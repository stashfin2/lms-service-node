{
  "name": "lms-service",
  "version": "1.0.0",
  "description": "LMS Service - Node.js TypeScript project integrating with Fineract APIs",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only --watch src src/app.ts",
    "watch": "tsc -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "kafka:tunnel": "bash scripts/kafka-tunnel.sh",
    "kafka:tunnel:stop": "bash scripts/kafka-tunnel-stop.sh"
  },
  "keywords": [
    "lms",
    "fineract",
    "typescript",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "mysql2": "^3.15.3",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/kafkajs": "^1.9.0",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
